{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": ["src/**/*", "env.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
} 